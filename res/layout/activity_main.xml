<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:background="@color/bg"
    android:gravity="fill"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="10" >
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:layout_weight="3"
        android:scaleType="fitEnd"
        android:src="@drawable/ig_title" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="寻寻觅觅，冷冷清清，凄凄惨惨戚戚\n其实我只是找车的。。"
            android:textColor="#62cb63"
            android:textSize="14sp"
            android:typeface="serif" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom"
    android:layout_margin="0dp"
    android:layout_weight="3"
    android:gravity="fill_horizontal|center"
    android:orientation="horizontal"
    android:padding="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="2" >

    <ImageView
        android:id="@+id/find_bike_button"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#5B3D8D"
        android:scaleType="fitCenter"
        android:src="@drawable/ig_findbike" />

    <ImageView
        android:id="@+id/analysis_button"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#DA3748"
        android:scaleType="fitCenter"
        android:src="@drawable/ig_analysis" />

</LinearLayout>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom"
    android:layout_margin="0dp"
    android:layout_weight="3"
    android:gravity="fill_horizontal|center"
    android:orientation="horizontal"
    android:padding="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="2" >
     
    <ImageView
        android:id="@+id/setting_button"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#E58568"
        android:scaleType="fitCenter"
        android:src="@drawable/ig_setting" />
    
    <ImageView
        android:id="@+id/about_button"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#32AD9E"
        android:scaleType="fitCenter"
        android:src="@drawable/ig_about" />

	</LinearLayout>
	
</LinearLayout>


