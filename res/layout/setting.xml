<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:background="@color/bg"
    android:gravity="fill"
    android:orientation="vertical"
    android:padding="0dp" 
    android:weightSum="9" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_margin="0dp" 
        android:layout_weight="2"
        android:scaleType="fitEnd"
        android:src="@drawable/setting_title" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom"
    android:layout_margin="0dp"
    android:layout_weight="7"
    android:orientation="vertical">
    <RadioGroup
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_gravity="bottom"
	    android:layout_margin="0dp"         
	    android:layout_weight="5"
	    android:checkedButton="@+id/music2"
	    android:id="@+id/menu">

        <RadioButton
            android:id="@+id/music1"
            android:layout_width="fill_parent"
            android:layout_margin="30dp"
            android:text="铃声1: 丁香花" />
        
        <RadioButton
            android:id="@id/music2"
            android:layout_width="fill_parent"
            android:layout_margin="30dp"
            android:text="铃声2: 爱我别走" />

    </RadioGroup>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom"
    android:layout_margin="0dp"
    android:layout_weight="3"
    android:gravity="fill_horizontal|center"
    android:orientation="horizontal"
    android:padding="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="2" >

    <ImageView
        android:id="@+id/sure_button"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#DA3748"
        android:scaleType="fitCenter"
        android:src="@drawable/ig_sure" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#268EC1"
        android:scaleType="fitCenter"
        android:src="@drawable/ig_cancel" />

</LinearLayout>

</LinearLayout>

</LinearLayout>
